package com.jhl.controller;

import java.io.File;
import java.io.IOException;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.multipart.MultipartFile;
import org.springframework.web.servlet.ModelAndView;

@Controller
public class UploardController {
	
	private static final String FILE_SERVER_PATH = "D:\\workspace\\fileUploadEx\\src\\main\\webapp\\resources\\img";

	@RequestMapping(value = "/uploard", method = RequestMethod.POST)
	public String uploard(@RequestParam("uploardFile") MultipartFile file, ModelAndView mav, Model model)
			throws IllegalStateException, IOException {
		
		if(!(file.getOriginalFilename().isEmpty())) {
			file.transferTo(new File(FILE_SERVER_PATH, file.getOriginalFilename()));
			model.addAttribute("msg", "File uplarded well");
		}else {
			model.addAttribute("msg", "failure");
		}
		
		return "redirect:/";
	}

}
